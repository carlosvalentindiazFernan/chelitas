{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
      "headers": [ {
        "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
          "headers" : [ {
              "key" : "Access-Control-Allow-Origin",
              "value" : "*"
          } ]
      } ],
    "public": "build/default/",
    "rewrites": [
      {
        "source": "!/__/**",
        "destination": "/index.html"
      },
      {
        "source": "**/!(*.js|*.html|*.css|*.json|*.svg|*.png|*.jpg|*.jpeg)",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*"
    ]
  }
}
